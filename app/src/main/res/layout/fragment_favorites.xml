<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/favoritesImage"
        android:layout_width="@dimen/primary_indent_size_120"
        android:layout_height="@dimen/primary_indent_size_120"
        android:src="@drawable/no_songs"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/primary_indent_size_106"/>

    <TextView
        android:id="@+id/favoritesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mediateka_empty"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/favoritesImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/primary_indent_size_16"/>

</androidx.constraintlayout.widget.ConstraintLayout>