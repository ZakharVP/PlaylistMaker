<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp"
        android:padding="2dp">

    <Button
        android:id="@+id/backToMain"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        app:icon="@drawable/ic_s_top_arrow_back"
        app:iconTint="?attr/colorOnPrimary"
        android:text="@string/main_screen_find"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/main_screen_primary_text_size"
        android:textStyle="bold"
        android:padding="12dp"
        android:fontFamily="@font/ys_display_medium"
        android:textAllCaps="false"
        style="?android:attr/borderlessButtonStyle"/>

    <EditText
        android:id="@+id/findEditText"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:inputType="text"
        android:hint="@string/main_screen_find"
        android:maxLines="1"
        android:background="@drawable/rounded_edittext_background"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:drawableStart="@drawable/search_icon"
        android:paddingStart="12dp"
        android:drawablePadding="12dp"
        android:textSize="16sp"
        android:drawableTint="?attr/colorPrimaryContainer"
        android:textColor="?attr/colorPrimaryContainer"
        android:textColorHint="?attr/colorPrimaryContainer"
        />

        <ImageView
            android:id="@+id/clearIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:visibility="gone" />

    </LinearLayout>>

</androidx.constraintlayout.widget.ConstraintLayout>