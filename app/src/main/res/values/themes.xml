<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="createPlaylistButtonBackground">@color/create_playlist_button_bg_light</item>
        <item name="createPlaylistButtonText">@color/create_playlist_button_text_light</item>
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <!-- Фон -->
        <item name="colorPrimary">@color/yp_white</item>
        <item name="colorPrimaryVariant">@color/yp_blue</item>
        <item name="colorPrimaryInverse">@color/yp_white</item>
        <!-- Переключатель track и knob-->
        <item name="colorSecondary">@color/yp_gray</item>
        <item name="colorOnSecondary">@color/yp_light_gray</item>
        <!-- Текст -->
        <item name="colorOnPrimary">@color/yp_black</item>
        <item name="colorSecondaryVariant">@color/yp_light_gray</item>
        <item name="colorPrimaryContainer">@color/yp_gray</item>
        <item name="colorOnPrimarySurface">@color/yp_gray</item>

        <item name="android:windowLightStatusBar">true</item>

        <item name="createPlaylistButtonBackground">@color/create_playlist_button_bg_dark</item>
        <item name="createPlaylistButtonText">@color/create_playlist_button_text_dark</item>

    </style>

    <style name="AppToolbar" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/yp_black</item>
    </style>

</resources>