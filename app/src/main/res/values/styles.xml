<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonMainScreenStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/primary_indent_size</item>
        <item name="android:layout_marginTop">@dimen/primary_indent_size</item>
        <item name="android:layout_marginRight">@dimen/primary_indent_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/main_screen_primary_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/primary_indent_size</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/primary_indent_size_12</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="elevation">@dimen/primary_indent_size_0</item>
        <item name="android:translationZ">@dimen/primary_indent_size_0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonSettingsStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/primary_indent_size_62</item>
        <item name="android:layout_marginTop">@dimen/primary_indent_size_8</item>
        <item name="iconGravity">end</item>
        <item name="backgroundTint">@color/yp_blue</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/settings_screen_primary_text_size</item>
        <item name="android:padding">@dimen/primary_indent_size</item>
    </style>

    <style name="ButtonSettingsStyleTwo" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/primary_indent_size_62</item>
        <item name="android:layout_marginTop">@dimen/primary_indent_size_8</item>
        <item name="iconGravity">end</item>
        <item name="backgroundTint">@color/yp_blue</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/settings_screen_primary_text_size</item>
        <item name="android:padding">@dimen/primary_indent_size</item>
        <item name="iconTint">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="MyTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
        <item name="tabTextColor">?attr/colorOnSurface</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomNavigation.PlaylistMaker" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/bottom_nav_with_border</item>
        <item name="itemIconTint">@color/nav_icon_tint</item>
        <item name="itemTextColor">@color/nav_icon_tint</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <style name="CustomTextInputEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonCreatePlaylistStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:backgroundTint">?attr/createPlaylistButtonBackground</item>
        <item name="android:textColor">?attr/createPlaylistButtonText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="bottomSheetStyle">@style/Widget.App.BottomSheet.Modal</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Widget.App.BottomSheet.Modal" parent="Widget.Material3.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="RoundedDialogDeleteTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:windowBackground">@drawable/rounded_dialog_delete_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogDeleteTextAppearance</item>

        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialog.Button.Negative</item>
    </style>

    <style name="AlertDialogDeleteTextAppearance" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="AlertDialog.Button.Positive" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">?attr/colorError</item>
    </style>

    <style name="AlertDialog.Button.Negative" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

</resources>