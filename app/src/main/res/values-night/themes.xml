<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="createPlaylistButtonBackground">@color/create_playlist_button_bg_dark</item>
        <item name="createPlaylistButtonText">@color/create_playlist_button_text_dark</item>
    </style>


    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <!-- Фон -->
        <item name="colorPrimary">@color/yp_black</item>
        <item name="colorPrimaryVariant">@color/yp_black</item>
        <item name="colorPrimaryInverse">@color/black</item>
        <!-- Переключатель track и knob-->
        <item name="colorSecondary">@color/yp_blue</item>
        <item name="colorOnSecondary">@color/yp_light_blue</item>
        <!-- Текст -->
        <item name="colorOnPrimary">@color/yp_white</item>
        <item name="colorSecondaryVariant">@color/yp_white</item>
        <item name="colorPrimaryContainer">@color/yp_black</item>
        <item name="colorOnPrimarySurface">@color/yp_white</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/selector_text_input_stroke_dark</item>
        <item name="hintTextColor">@color/selector_text_input_hint_dark</item>
        <item name="android:textColorHint">@color/selector_text_input_hint_dark</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <style name="CustomTextInputEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppToolbar" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/yp_white</item>
    </style>
</resources>